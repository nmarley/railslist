- provide(:title, "View item")
%h1 View item

.row
  .list{class: "span6 offset3", style: "margin-bottom: 2em"}
    Current List: 
    %strong= @item.list.name

  %div{class: "span6 offset3"}
    = form_for(@item) do |f|
      = render 'shared/error_messages', object: f.object

      = f.label :content
      = f.text_area :content, readonly: true

    = link_to "\u2190 Back to list", @item.list
