- provide(:title, "Edit list")
%h1 Update this list

.row
  %div{class: "span6 offset3"}
    = form_for(@list) do |f|
      = render 'shared/error_messages', object: f.object

      = f.label :name
      = f.text_field :name

      %span{style: "display: block; margin-bottom: 0.5em;"}
        = f.label :private %><%= f.check_box :private

      = f.submit "Save changes", class: "btn btn-large btn-primary"
      = link_to "cancel", list_path(@list.id), class: "btn btn-info pull-right"

