<li id="<%= itemfeed_item.id %>">
  <span class="content">
  <%= auto_link( itemfeed_item.content, html: { target: '_blank' } ) %>
  </span>
  <span class="timestamp">
    Updated <%= time_ago_in_words(itemfeed_item.updated_at) %> ago.
  </span>
  <% if signed_in? && current_user?(itemfeed_item.list.user) %>
    <%= link_to "edit", edit_item_path(itemfeed_item.id) %> | 
    <%= render 'shared/delete_micropost_link', object: itemfeed_item %>
  <% end %>
</li>
