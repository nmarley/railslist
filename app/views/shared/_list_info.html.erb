<h1>
  <%= @list.name %>
  <% if @list.private? %>
    <i class="icon-lock"></i>
  <% end %>
</h1>
<span>
	<% if current_user?(@list.user) %>
    <%= link_to "edit list", edit_list_path(@list.id) %>
    <% if @list.items.count == 0 %>
    <%= link_to "delete list", @list, method: :delete,
                                      data: { confirm: "You sure?" },
                                      title: @list.name %>
    <% end %>
	<% end %>
</span>
<span>
  <%= pluralize(@list.items.count, "item") %>
</span>
