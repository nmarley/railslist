<% provide(:title, current_user.name) %>
<div class="row">
  <aside class="col-sm-4 col-md-4">
    <section>
      <%= render 'users/user_info' %>
    </section>
    <section>
      <%= render 'lists/form' %>
    </section>
  </aside>

  <div class="col-sm-8 col-md-8">
    <h3>Lists</h3>
    <%= form_tag root_url, method: :get, id: "lists_search" do %>
      <%= text_field_tag :search, params[:search],
        style: "width: 30%",
        autocomplete: "off",
        class: "vatop" %>
      <%= submit_tag "filter", name: nil, class: "btn vatop form-control btn-default" %>
    <% end %>

    <div id="lists">
      <%= render 'shared/feed' %>
    </div>
  </div>
</div>
