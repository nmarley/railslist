<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-lg-offset-3 col-sm-6 col-md-6">
    <%= form_for(@user) do |f| %>
      <%= render 'form', f: f %>
      <%= f.submit "Save changes", class: "btn btn-lg btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a target="_blank" href="http://gravatar.com/emails">change</a>
  </div>
</div>

